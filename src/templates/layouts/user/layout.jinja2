{% import 'layouts/shared/callouts.jinja2' as callout %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="{{ gettext('PowerDNS Admin DNS server management tool') }}">
    <meta name="keywords"
          content="{{ gettext('app, responsive, jquery, bootstrap, dashboard, admin, pda, dns, lookup, nameserver') }}">
    <link rel="icon" type="image/x-icon" href="{{ static('node_modules/admin-lte/dist/img/favcon/favicon.ico') }}">
    <title>{{ gettext('PowerDNS Admin') }} - {% block title %}{% endblock %}</title>
    {% include 'layouts/user/head-styles.jinja2' %}
    {% block html_head %}{% endblock %}
</head>
<body class="hold-transition sidebar-mini" style="height: auto;">
<div id="app">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"
                       title="{{ gettext('Collapse Menu') }}"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="{{ url('dashboard:index') }}" class="nav-link" title="{{ gettext('Dashboard') }}"><i
                        class="nav-icon fas fa-gauge-high"></i> {{ gettext('Dashboard') }}</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="{{ url('account:index') }}" class="nav-link" title="{{ gettext('Account') }}"><i
                        class="nav-icon fas fa-user"></i> {{ gettext('Account') }}</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="{{ url('dashboard:index') }}" class="brand-link" title="{{ gettext('Dashboard') }}">
                <img alt="{{ gettext('Logo') }}" src="{{ static('node_modules/admin-lte/dist/img/AdminLTELogo.png') }}"
                     class="brand-image img-circle elevation-3"
                     style="opacity: .8"/>
                <span class="brand-text font-weight-light">{{ gettext('<b>PowerDNS</b>Admin') }}</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">
                        <span style="color: #FFF">
                            <a href="{{ url('account:index') }}" title="{{ gettext('Account') }}"><i
                                class="nav-icon fa-solid fa-user"></i> {{ gettext('Account') }}</a>
                            &nbsp;|&nbsp;
                            <a href="{{ url('account:logout') }}" title="{{ gettext('Logout') }}"><i
                                class="nav-icon fa-solid fa-sign-out-alt"></i> {{ gettext('Logout') }}</a>
                        </span>
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <div class="form-inline mt-2">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search"
                               placeholder="{{ gettext('Search') }}"
                               aria-label="{{ gettext('Search') }}">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar" title="{{ gettext('Search') }}">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">
                        <li class="nav-item">
                            <a href="{{ url('dashboard:index') }}" class="nav-link" title="{{ gettext('Dashboard') }}">
                                <i class="nav-icon fas fa-gauge-high"></i>
                                <p>{{ gettext('Dashboard') }}</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ url('account:index') }}" class="nav-link" title="{{ gettext('Account') }}">
                                <i class="nav-icon fas fa-user"></i>
                                <p>{{ gettext('Account') }}</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        {% block content %}{% endblock %}

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>{{ gettext('Version') }}</b> 0.1.0
            </div>
            <strong>{{ gettext('Created by') }} <a href="https://azorian.solutions"
                                                   target="_blank">{{ gettext('Azorian Solutions') }}</a>.</strong>
        </footer>

        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
    </div>
</div>
{% include 'layouts/user/footer-scripts.jinja2' %}
{% block footer_scripts scoped %}{% endblock %}
</body>
</html>