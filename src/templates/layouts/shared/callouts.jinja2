{% macro callout(type, msg, header) -%}
    {% set type = type|default('info') %}
    {% set msg = msg|default('No message was defined for this callout!') %}
    <div class="callout callout-{{ type }}">
        {% if header | length %}
        <h5>{{ header }}</h5>
        {% endif %}
        <p>{{ msg }}</p>
    </div>
{%- endmacro -%}

{% macro screen_size() -%}
    <div class="callout callout-warning screen-size">
        <h5>{{ gettext('Notice!') }}</h5>
        <p>{{ gettext('This app is best to used with a larger screen. Try turning your device horizontally for an improved experience.') }}</p>
    </div>
{%- endmacro -%}

{% macro form_errors(form, field_filter) -%}
{% if form.errors %}
    <ul class="form-errors">
    {% for field, errors in form.errors.items() if field == field_filter or not field_filter and field == '__all__' %}
        {% if field == 'password2' %}
        {% set label = 'Password' %}
        {% elif field == '__all__' %}
        {% set label = '' %}
        {% else %}
        {% set label = form[field].label.text %}
        {% endif %}
    <li>
        {% if not field_filter and label %}
        {{ label }}
        {% endif %}
        {% if errors %}
        <ul>
            {% for error in errors %}
            <li>{{ error }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    </li>
    {% endfor %}
    </ul>
{% endif %}
{%- endmacro -%}
