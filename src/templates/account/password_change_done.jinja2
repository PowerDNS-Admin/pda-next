{% extends 'layouts/user/layout.jinja2' %}
{% block title %}{{ gettext('Account Password Changed') }}{% endblock %}

{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1><i class="fas fa-user"></i> {{ gettext('Manage Account') }}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="{{ url('dashboard:index') }}"
                                   title="{{ gettext('Dashboard') }}">{{ gettext('Dashboard') }}</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="{{ url('account:index') }}"
                                   title="{{ gettext('Account') }}">{{ gettext('Account') }}</a>
                            </li>
                            <li class="breadcrumb-item active">{{ gettext('Change Password') }}</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- /.content -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        {{ callout.screen_size() }}

                        <div class="row">

                            <div class="col-12 col-md-12">
                                <div class="card card-row card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">
                                            {{ gettext('Change Account Password') }}
                                        </h3>
                                    </div>
                                    <!-- /.card-header -->

                                    <div class="card-body">
                                        <div class="callout callout-success">
                                            <h5>{{ gettext('Password Changed!') }}</h5>
                                            <p>{{ gettext('Your account password has been updated. Please use the new password the next time you login.') }}</p>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->
                            </div>
                            <!-- /.col -->

                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->

            </div><!-- /.container-fluid -->
        </section>
    </div>
    <!-- /.content-wrapper -->
{% endblock %}
