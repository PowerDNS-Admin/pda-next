{% extends 'layouts/user/layout.jinja2' %}
{% block title %}{{ gettext('Account Setup') }}{% endblock %}

{% block content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1><i class="fas fa-building"></i> {{ gettext('Account Setup') }}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="{{ url('dashboard:index') }}"
                                   title="{{ gettext('Dashboard') }}">{{ gettext('Dashboard') }}</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="{{ url('account:index') }}"
                                   title="{{ gettext('Account') }}">{{ gettext('Account') }}</a>
                            </li>
                            <li class="breadcrumb-item active">{{ gettext('Start') }}</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- /.content -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        {{ callout.screen_size() }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="callout callout-success">
                            <p>{{ gettext('Want to create a new account?') }}</p>
                            <button type="button" title="{{ gettext('Create Account') }}"
                                    class="btn btn-success btn-create">{{ gettext('Create Account') }}
                            </button>
                        </div>
                    </div>
                    <!-- /.col -->

                    <div class="col-12 col-md-6">
                        <div class="callout callout-success">
                            <p>{{ gettext('Want to join an existing account?') }}</p>
                            <button type="button" title="{{ gettext('Join Account') }}"
                                    class="btn btn-success btn-join">{{ gettext('Join Account') }}
                            </button>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->

            </div><!-- /.container-fluid -->
        </section>
    </div>
    <!-- /.content-wrapper -->
{% endblock %}

{% block footer_scripts %}
    <script type="text/javascript">
        let btnCancel = null
        let btnCreate = null
        let btnJoin = null

        let onBtnCancelClick = function (e) {
            window.location = '{{ url('account:index') }}'
        }

        let onBtnCreateClick = function (e) {
            window.location = '{{ url('account:create') }}'
        }

        let onBtnJoinClick = function (e) {
            window.location = '{{ url('account:join') }}'
        }

        let setupListeners = function () {
            btnCancel.bind('click', onBtnCancelClick)
            btnCreate.bind('click', onBtnCreateClick)
            btnJoin.bind('click', onBtnJoinClick)
        }

        $(function () {
            btnCancel = $('.btn-cancel')
            btnCreate = $('.btn-create')
            btnJoin = $('.btn-join')
            setupListeners()
        })
    </script>
{% endblock %}