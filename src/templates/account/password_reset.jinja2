{% extends 'layouts/login/layout.jinja2' %}
{% block title %}{{ gettext('Password Reset') }}{% endblock %}

{% block content %}
    <!-- Login Box -->
    <div class="login-box">

        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="https://powerdnsadmin.org" target="_blank" class="h1">{{ gettext('<b>PowerDNS</b>Admin') }}</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">{{ gettext('Please provide your account email address to reset your password.') }}</p>
                <form action="" method="post" class="mb-2">
                    {{ csrf_input }}
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" name="email"
                               placeholder="{{ gettext('Account Email Address') }}" required autofocus
                               autocapitalize="none" autocomplete="email" maxlength="150">
                        <div class="input-group-append">
                            <!--
                            <div class="input-group-text">
                                <span class="fas fa-id-badge"></span>
                            </div>
                            -->
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    {{ callout.form_errors(form, 'email') }}
                    {{ callout.form_errors(form) }}
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block" title="{{ gettext('Send Password Reset Link') }}">{{ gettext('Send Password Reset Link') }}</button>
                        </div>
                    </div>
                </form>
                <p class="mb-1">
                    <a href="{{ url('account:login') }}" class="btn btn-link btn-block" title="{{ gettext('Login') }}">{{ gettext('I suddenly remember my password') }}</a>
                </p>
                <p class="mb-0">
                    <a href="{{ url('account:register') }}" class="btn btn-link btn-block" title="{{ gettext('Register new account') }}">{{ gettext('Register a new account') }}</a>
                </p>
            </div>

        </div>

    </div>
    <!-- /.login-box -->
{% endblock %}